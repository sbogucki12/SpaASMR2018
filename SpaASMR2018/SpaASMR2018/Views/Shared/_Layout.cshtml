<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-xs-1"></div>
                    <div class="col-xs-7">@Html.ActionLink("Spa: ASMR", "Index", "Home", "", new { @class = "navbar-brand", @id = "logo" }) </div>
                    <div class="col-xs-1" id="beta">(Beta)</div>
                    <div class="col-xs-3"></div>
                </div>
                
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Html.Partial("_FooterPartial", new SpaASMR2018.ViewModels.ErrorViewModel())



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>

<script type="text/javascript">
    $("#onErrorReport").click(function () {
        console.log("fired");
        $("#errorReporting").toggle();
    });

    $("#onSuccess").click(function () {
        bootbox.alert("Error Submitted! Thank you.");
    })
</script>


