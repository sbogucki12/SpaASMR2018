@model SpaASMR2018.ViewModels.ErrorViewModel


<footer>
    <div class="container">
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-4"><center><p><i>This site is in development. Please report any errors you encounter here:</i></p></center></div>
            <div class="col-xs-7"><button class="btn btn-danger" id="onErrorReport">Errors</button></div>
        </div>
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-11" id="errorReporting" style="display: none;">
                @using (Html.BeginForm("submit", "api/errors"))
    {
            <div class="form-group">
                @Html.LabelFor(e => e.UserName, "Please enter your name:", new { @class = "intro" })
                <br />
                @Html.TextBoxFor(e => e.UserName, new { @class = "wide" })
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.UserEmail, "Enter email address if you'd like to be notified when error is fixed:", new { @class = "intro" })
                <br />
                @Html.TextBoxFor(e => e.UserEmail, new { @class = "wide" })
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.UserInput, "Please describe the error:", new { @class = "intro" })
                <br />
                @Html.TextAreaFor(e => e.UserInput, new { @class = "wideBox" })
            </div>
            <button type="submit" class="btn btn-success" id="onSuccess">Submit</button>
}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10"></div>
            <div class="col-xs-2"><p>&copy; @DateTime.Now.Year - Spa: ASMR</p></div>
        </div>
    </div>
</footer>




