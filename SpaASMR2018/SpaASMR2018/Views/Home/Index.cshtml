@model SpaASMR2018.ViewModels.GenresViewModel

@{
    /**/

    ViewBag.Title = "Home Page";
}



@using (Html.BeginForm("GetVideos", "Genres", new { language = "", gender = "", genreId = "" }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(v => v.Language, "Which language do you prefer your ASMRtist to use?")
        @Html.DropDownList("language",
                                           new SelectList(
                                               new List<Object>
                                               {
new { value = "English", text = "English" },
new { value = "Russian", text = "Russian" }
                                               },
                                               "value",
                                               "text"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Gender, "Do you prefer your ASMRtist to be female or male?")
        @Html.DropDownList("gender",
                                           new SelectList(
                                               new List<Object>
                                               {
new { value = "Female", text = "Female" },
new { value = "Male", text = "Male" }
                                               },
                                               "value",
                                               "text"), new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Genre, "Which genre of ASMR would you like?")
        @Html.DropDownList("genreId",
                                       new SelectList(
                                           new List<Object>
                                           {
new { value = 1, text = "Verbal (Aspirations, Whispers, etc.)" },
new { value = 2, text = "Objects (Mostly non-verbal)" },
new { value = 3, text = "Roleplays (Characters, and Miscellaneous)"},
new { value = 4, text = "Exam Roleplays (Dr. Visit, Spa, Massage, etc.)"}
                                           },
                                           "value",
                                           "text"), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Get Videos</button>
}











